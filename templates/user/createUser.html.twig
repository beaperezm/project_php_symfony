{% extends 'athletes/baseAthlete.html.twig' %}

{% block container %}

{# form es una función de twig - recibe como argumento el formulario que queremos pintar - creado dentro de la función insertAthlete en el return #}
{{ form(userForm) }}

{% for message in app.flashes('success') %}
<div class="modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">El usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>{{ message }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endfor %}

{# CIERRE del BLOQUE #}
{% endblock %}
