      <div class="card-body">
        <h5 class="card-title">{{ athlete.name }}</h5>
        <p class="card-text">{{ athlete.sport }}</p>
        {# al ser una ruta variable path recibe: el name puesto en AthleteController y entre las llaves {los argumentos variables que tiene nuestra ruta, como si fuese un JSON clave: valor} #}
        <a href="{{ path('showAthlete', {id: athlete.id}) }}" class="btn btn-primary">MÃ¡s Info</a>
      </div>
    </div>
  </div>

{# CIERRE del BUCLE #}
  {% endfor %}
</div>

